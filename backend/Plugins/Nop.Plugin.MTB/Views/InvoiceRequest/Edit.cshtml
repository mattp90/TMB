@using Nop.Plugin.MTB
@model global::Nop.Plugin.MTB.Model.Admin.InvoiceRequest.InvoiceRequestModel

@{
    Html.SetActiveMenuItemSystemName(MTB.PLUGIN_NAME_SPACE + ".FileVintageUpload");
    Layout = $"_AdminLayout";
}

<form asp-controller="InvoiceRequest" asp-action="Edit" method="post" id="invoicerequest-edit-form">
    <nop-antiforgery-token />
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.Common.Edit")
            <small>
                <i class="fa fa-arrow-circle-left"></i>@Html.ActionLink(T(MTB.PLUGIN_NAME_SPACE + ".FileVintageUpload.BackToList").Text, "List")
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="filevintageupload-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                <div class="cards-group">
                    <div class="card card-default">
                        <div class="card-body">
                            @Html.Partial("_CreateOrUpdate", Model)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>
<nop-delete-confirmation asp-button-id="filevintageupload-delete" asp-model-id="@Model.Id" />